        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_CourseProject.Views.Admin"
        mc:Ignorable="d"
        Title="Добавление сотрудника" Height="392" Width="679" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,10,0,-41">
        <Grid.Background >
