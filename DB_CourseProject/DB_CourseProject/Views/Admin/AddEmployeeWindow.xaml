        <Button Grid.Column="3" Height="49" FontFamily="Century Gothic" Width="214" Foreground="White"  Template="{DynamicResource template6}" VerticalAlignment="Top" HorizontalAlignment="Left" VerticalContentAlignment="Center" Content="Добавить" FontSize="18" Click="Button_Click" Margin="75,279,0,0" Grid.RowSpan="2"/>
